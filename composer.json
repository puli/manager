{
    "name": "puli/manager",
    "description": "Generates Puli repositories from configured packages.",
    "homepage": "http://puli.io",
    "license": "MIT",
    "authors": [
        {
            "name": "Bernhard Schussek",
            "email": "bschussek@gmail.com"
        }
    ],
    "require": {
        "php": "^5.3.9|^7.0",
        "puli/repository": "^1.0-beta9",
        "puli/discovery": "^1.0-beta9",
        "puli/url-generator": "^1.0-beta4",
        "webmozart/json": "^1.3@dev",
        "webmozart/path-util": "^2.2.3",
        "webmozart/expression": "^1.0",
        "webmozart/assert": "^1.0",
        "webmozart/glob": "^4.0",
        "symfony/event-dispatcher": "^2.3|^3.0",
        "symfony/filesystem": "^2.3|^3.0",
        "ramsey/uuid": "^2.8",
        "psr/log": "^1.0"
    },
    "require-dev": {
        "webmozart/key-value-store": "^1.0-beta7",
        "predis/predis": "^1.0",
        "basho/riak": "^1.4",
        "phpunit/phpunit": "^4.6",
        "sebastian/version": "^1.0.1",
        "sebastian/comparator": "^1.2"
    },
    "suggest": {
        "webmozart/key-value-store": "to use key-value store change streams/discoveries",
        "predis/predis": "to use Predis based key-value stores",
        "basho/riak": "to use Riak based key-value stores"
    },
    "autoload": {
        "psr-4": {
            "Puli\\Manager\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Puli\\Manager\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "support": {
        "issues": "https://github.com/puli/issues/issues"
    }
}
